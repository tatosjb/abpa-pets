<p id="notice"><%= notice %></p>

<h1>Animals</h1>

<table>
  <thead>
    <tr>
      <th>Type</th>
      <th>Size</th>
      <th>Fur</th>
      <th>Color</th>
      <th>Gender</th>
      <th>Birthdate</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @animals.each do |animal| %>
      <tr>
        <td><%= animal.type %></td>
        <td><%= animal.size %></td>
        <td><%= animal.fur %></td>
        <td><%= animal.color %></td>
        <td><%= animal.gender %></td>
        <td><%= animal.birthdate %></td>
        <td><%= animal.description %></td>
        <td><%= link_to 'Show', animal %></td>
        <td><%= link_to 'Edit', edit_animal_path(animal) %></td>
        <td><%= link_to 'Destroy', animal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

