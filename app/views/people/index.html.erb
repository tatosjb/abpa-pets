<div class="container col-xs-12">
  <p class="pull-right">
    <button class="btn btn-primary" data-toggle="modal"
            data-target="#newPersonModal">Nova pessoa</button>
  </p>
</div>

<div class="col-xs-12"><%= will_paginate @people %></div>

<% @people.each do |person| %>
    <%= render :template => "people/person", :locals => {:person => person} %>
<% end %>

<div class="col-xs-12"><%= will_paginate @people %></div>

<%= render :template => "people/new", :locals => {:@person => Person.new} %>
